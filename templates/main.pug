    .tabs-section
        .container
            .title
                .title_main order process
            div(class="tabs order-process__tab")
                .tabs-caption
                    div(class="tab-button btn-switch active" ) standart order
                    div(class="tab-button btn-switch"  ) bespoke product
            div(class="tabs-content active")              
                ul.tabs-content__group
                    - for (var x = 0; x < 5; x++)   
                        li.tabs-item
